# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://sjempleados:sj2025pass@sj-empleados-cluster.ygbj0vj.mongodb.net/?appName=sj-empleados-cluster

# JWT secret for authentication
JWT_SECRET=fdf4b18b489dde6b0cda815200227801

# CORS allowed origins (your frontend URL). Puede ser lista separada por comas.
# Ejemplos:
# CORS_ORIGIN=https://tu-frontend.vercel.app
# CORS_ORIGIN=https://tu-frontend.vercel.app,https://otro-dominio.app
CORS_ORIGIN=https://sj-empleados-system.vercel.app

# Opcional: patrones con comodines para CORS (por ejemplo, para previews de Vercel)
# Usa '*' como comodín. Ejemplos:
# CORS_ORIGIN_PATTERNS=https://*.vercel.app
# CORS_ORIGIN_PATTERNS=https://*.vercel.app,https://*.ngrok-free.app
CORS_ORIGIN_PATTERNS=https://*.vercel.app

# Optional: external storage/CDN (recommended for production uploads)
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
# or use discrete vars:
# CLOUDINARY_CLOUD_NAME=your_cloud
# CLOUDINARY_API_KEY=your_key
# CLOUDINARY_API_SECRET=your_secret

# Twilio (opcional, para WhatsApp/SMS automáticos)
# Obtén las credenciales en https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Número de envío de WhatsApp (sandbox/approved):
# Formato: 'whatsapp:+14155238886' (sandbox) o tu número verificado
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Recordatorios automáticos (cron y filtros)
# Habilitar/deshabilitar el scheduler
REMINDERS_ENABLED=true
# Cron (por defecto 08:00 todos los días). Formato estándar crontab.
# Ejemplos:
# 0 8 * * *   -> 08:00 cada día
# 30 9 * * 1-5 -> 09:30 de lunes a viernes
REMINDERS_CRON=0 8 * * *
# Solo empleados activos (true/false)
REMINDERS_ONLY_ACTIVE=true
# Filtrar por departamento (lista separada por comas). Vacío = todos.
# Ejemplo: Ventas,Administración
REMINDERS_DEPARTAMENTO=
# Filtrar por sucursal (lista separada por comas). Vacío = todas.
# Ejemplo: Casa Central,Sucursal Norte
REMINDERS_SUCURSAL=

# Seed de usuario por defecto (desarrollo)
# Establece en 'false' para deshabilitar
SEED_DEFAULT_USER=true
# Credenciales por defecto para el seed
ADMIN_SEED_EMAIL=admin@test.com
ADMIN_SEED_PASSWORD=123456
ADMIN_SEED_NAME=Admin
ADMIN_SEED_ROLE=admin